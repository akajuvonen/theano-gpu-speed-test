#!/bin/bash -e

echo "NOTE: If you get CondaEnvironmentNotFoundError, run bin/init first"

# Activate conda environment
source activate gpuspeedtest

# Use the CPU
echo "--- Using CPU ---"
export THEANO_FLAGS='device=cpu'
time python src/theano_test.py

# Use the GPU
echo "--- Using GPU ---"
export THEANO_FLAGS='device=cuda'
time python src/theano_test.py

# Deactivate conda environment
source deactivate
